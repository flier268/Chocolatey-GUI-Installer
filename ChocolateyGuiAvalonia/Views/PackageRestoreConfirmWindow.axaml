<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChocolateyGuiAvalonia.Views.PackageRestoreConfirmWindow"
		xmlns:vm="using:ChocolateyGuiAvalonia.ViewModels"
		x:DataType="vm:PackageRestoreConfirmWindowViewModel"
        Title="還原確認" Width="700" Height="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="將安裝以下套件：" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Packages}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="套件名稱" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="確定" Width="100" Margin="5" Name="ConfirmButton"/>
            <Button Content="取消" Width="100" Margin="5" Name="CancelButton"/>
        </StackPanel>
    </Grid>
</Window>